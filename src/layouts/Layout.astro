---
interface Props {
    title: string; // Título de la página, pasado como prop
}

const { title } = Astro.props; // Extraer el título de las propiedades de Astro
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title> <!-- Título de la página -->
    </head>
    <body>
        <slot /> <!-- Lugar para el contenido de la página -->
    </body>
</html>

<style is:global>
    html {
        font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
        background: #fff; /* Color de fondo blanco */
        letter-spacing: -0.025rem; /* Espaciado de letras */
    }

    body, figure {
        margin: 0; /* Sin márgenes */
        padding: 0; /* Sin relleno */
    }

    a {
        text-decoration: none; /* Sin subrayado */
    }

    ul {
        list-style: none; /* Sin estilo de lista */
        margin: 0; /* Sin márgenes */
        padding: 0; /* Sin relleno */
    }

    *, *::before, *::after {
        box-sizing: border-box; /* Incluir relleno y borde en el ancho y alto */
    }

   
    h1, h2, h3, h4 {
        margin: 0; /* Sin márgenes para encabezados */
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; /* Fuentes del sistema */
    }

    p {
        color: #666; /* Color del texto */
        font-size: .9rem; /* Tamaño de fuente */
        line-height: 1.5; /* Altura de línea */
        margin: 0; /* Sin márgenes */
        text-wrap: pretty;
    }

    /*media Querys*/

    /*no imprimir botones*/
    @media print{
        .no-print{
            display: none !important; /* para sobreescribir cualquier otro estilo */
        }
    }
    .print{
        display: none !important;
    }

    /* imprimir la info en vez de botones */
    @media print {
        .print{
            display:block !important;
        }
    }

    @media print {
        body {
            margin: 0; /* Quitar márgenes del body */
            padding: 4mm; /* Añadir un poco de espacio alrededor */
        }
    
        /* Ajustar encabezados */
        h1, h2, h3, h4 {
            page-break-after: avoid; /* Evitar saltos de página después de encabezados */
        }
    
        /* Ajustar párrafos */
        p {
            page-break-inside: avoid; /* Evitar saltos de página dentro de párrafos */
        }
    }
    

</style>

