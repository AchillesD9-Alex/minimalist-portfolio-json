---
import Section from "../Section.astro";

import {education} from "@cv"
---

<Section title = "Education">
    <ul>
        {education.map( ({institution, area, studyType, startDate, endDate, url, summary, duration, moreInfo,name})=> {
            
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{area}</h3>

                                <h4>{name} - {studyType} of 
                                {institution}
                                ({duration})</h4>
                            </div>

                            <time>from {startDate} to {endDate}</time>

                        </header>

                        <footer>
                            {summary && summary.map((summaryItem) => <span>{summaryItem}</span>)}

                        </footer>                 
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>

    /*Contenedor de cada experienca laboral; mejor estilar el contenedor que el contenido*/
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111
    }

    article h4{
        color: #222;
        font-weight: 400;
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time{
        font-size:0.85rem;
        color: #555;
    }
    article span{ /* Style parecido a <p> de Layout*/
    color: #666;
    font-size: .9rem;
    line-height: 1.2;
    margin: 0;
    text-wrap: pretty;
    display:flex; /*Permite el "enter" entre el array del JSON*/
    margin-bottom: 4px: /*para separacion entre info array*/
    }
</style>